# VSCode
c() {
  # cd can be a zoxide alias, so we save the current directory first
  local start_dir="$PWD"

  cd "$1"

  # Check if we actually moved to a different directory
  if [ "$PWD" = "$start_dir" ]; then
    # We didn't move, cd failed silently or we're already there
    return 1
  fi

  code .
}
ce() { c "$1" && exit; }

# Navigation
md() {
  mkdir -p $1
  cd $1
}

# Tools
alias gl='glab'
b() {
  if command -v batcat &> /dev/null; then
    batcat "$@"
  else
    bat "$@"
  fi
}
alias lzg='lazygit'
alias lzd='lazydocker'

# Docker
alias dps='docker ps'
alias dpa='docker ps -a'
alias di='docker images'
alias dv='docker volume ls'
alias dn='docker network ls'

# OpenCode
alias oc='opencode'