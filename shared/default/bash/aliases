# Navigation
md() {
  mkdir -p $1
  cd $1
}

# Tools
alias gl='glab'
b() {
  if command -v batcat &> /dev/null; then
    batcat "$@"
  else
    bat "$@"
  fi
}
alias lzg='lazygit'
alias lzd='lazydocker'

# Docker
alias dps='docker ps'
alias dpa='docker ps -a'
alias di='docker images'
alias dv='docker volume ls'
alias dn='docker network ls'