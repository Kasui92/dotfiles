

# Esegui gli script di installazione modulari solo se non gi√† installato
if [ ! -f ~/.cfg/.installed ]; then
    INSTALLER_DIR="$(dirname "$0")/installer"

    # Esegui sempre base.sh per primo
    BASE_SCRIPT="$INSTALLER_DIR/base.sh"
    if [ -f "$BASE_SCRIPT" ]; then
        bash "$BASE_SCRIPT"
    fi

    # Esegui tutti gli altri script in ordine alfabetico, escluso base.sh
    for script in $(ls "$INSTALLER_DIR"/*.sh | grep -v "base.sh" | sort); do
        bash "$script"
    fi

    # Crea marker file per evitare esecuzioni ripetute
    touch ~/.cfg/.installed
fi

source ~/.cfg/shell
source ~/.cfg/aliases
source ~/.cfg/functions
source ~/.cfg/prompt
source ~/.cfg/init
source ~/.cfg/envs
[[ $- == *i* ]] && bind -f ~/.cfg/inputrc